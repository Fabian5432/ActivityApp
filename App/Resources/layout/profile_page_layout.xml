<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/viewColor">
    <ImageView
        android:contentDescription="@string/desc"
        android:layout_width="92dp"
        android:layout_height="200dp"
        android:src="@drawable/icon_perm_identity_rounded"
        android:layout_gravity="center_horizontal"
        android:paddingTop="58dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Mr.Miele account"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="User"
        android:textColor="@android:color/holo_orange_light"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="42dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="15dp"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <Button
        android:id="@+id/account_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_lock"
        android:drawableRight="@drawable/icon_arrow"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@color/viewColor"
        android:text="Account settings" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/device_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_admin"
        android:drawableRight="@drawable/icon_arrow"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_orange_light"
        android:background="@color/viewColor"
        android:text="Device admin" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>
