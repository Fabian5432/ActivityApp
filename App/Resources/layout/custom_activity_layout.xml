<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/bottomBarColor">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/activity_title_id"
            android:text="Item title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/custom_activity_item_margin"
            android:paddingBottom="@dimen/custom_activity_item_padding_bottom"/>
        <TextView
            android:id="@+id/activity_value_id"
            android:text="value"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/custom_activity_item_padding_left"
            android:paddingTop="@dimen/custom_activity_item_padding_top"/>
    <TextView
        android:id="@+id/activity_subtitle_id"
        android:text="Active:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/custom_activity_item_margin"
        android:paddingTop="@dimen/custom_activity_item_padding_top"/>
 <ImageView
    android:contentDescription="@string/desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/icon_arrow"
    android:layout_marginRight="@dimen/custom_activity_item_margin_right"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"/>
</RelativeLayout>
</android.support.v7.widget.CardView>